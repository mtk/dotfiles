keysym Caps_Lock = Hyper_L Hyper_L Hyper_L
! keycode 64     = Keycap Alt_L
keycode 64       = Alt_L Alt_L Alt_L
! keycode 108    = keycap Alt_R
keycode 108      = Meta_L Meta_L Meta_L

clear lock

clear mod1
clear mod2
clear mod3
clear mod4

add mod1    = Meta_L
add mod2    = Alt_L
add mod3    = Super_L
add mod4    = Hyper_L

