skeysym  quoteleft = Escape     Escape
kNNsseysym  Escape    = quoteleft  asciitilde
 
! physical <= logical (bucky bits)
keysym  Caps_Lock = Control_L Control_L
keysym  Control_L = Meta_L Meta_L
keysym  Alt_R     = Super_R Super_R
keysym  Control_R = Hyper_R Hyper_R
 
clear   Lock
clear   Control
clear   Mod1
clear   Mod2
clear   Mod3
clear   Mod4
clear   Mod5
 
! no Lock setting!
add     Control   = Control_L
add     Mod1      = Meta_L     
add     Mod2      = Alt_L      
add     Mod3      = Super_R
add     Mod4      = Hyper_R
add     Mod5      = Num_Lock

