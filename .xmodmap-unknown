! ~ + ` 
keycode 0x31 = Escape Escape
! escape
keycode 0x9 = grave asciitilde
! capslock
keycode 0x42 = Control_L Control_L

! left control
keycode 0x25 = Meta_L Meta_L

! left alt
keycode 0x40 = Alt_L Alt_L

! right control
keycode 0x69 = Hyper_R Hyper_R

! right alt
keycode 0x6c = Super_R Super_R

clear lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4

add control = Control_L
add mod1    = Meta_L
add mod2    = Alt_L
add mod3    = Super_L Super_R
add mod4    = Hyper_R

