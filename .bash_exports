# export anything we set automatically
set -a

# platform independent

# our envy use sets these but it is not preferred.
# we capture them.
unset           \
    PERL5LIB    \
    PERL5PREFIX \
    PERL_MM_OPT

## general
auto_resume='substring'
#http_proxy='http://blah/'
#ftp_proxy='http://blah/'
ARCH=$(arch)
ARCHBIN=~/.bin/$ARCH
#BW_PRINTER=mets
BROWSER=google-chrome
CDHISTFILE=~/.cdhist
CDHISTSIZE=100
CDPATH=.:~/proj:~/proj/git:~:/usr/local/src
CDVARIGNORE='d|n|s|u'
COLOR_PRINTER=color
EDITOR='emacsclient -c'
EMACS=/usr/local/bin/emacs
EMACS_SERVER_FILE=/home/mtk/.emacs.d/server/server
ENSCRIPT='-C -E -G -H -r --color'
ESHELL=bash
EXA_COLORS="da=32"
FPATH=~/.bash_functions:
GITHUB_TOKEN="$(grep oauth_token ~/.config/hub | ~/.bin/field 1)"
# hostname does not seem to work w/v23 emacs??
HISTCONTROL='ignorespace:erasedups'
HISTIGNORE='\$\(@(split|type)*\)'
HISTSIZE=1000
HOSTNAME=$(hostname)
GNU_HOST=${HOSTNAME%%.*}
HOSTFILE=~/.bash_hosts
USER=${USER:-$LOGNAME}
HISTFILE=~/.$USER-bash_history
INPUTRC=~/.inputrc
LESS='-m -q -w -b50 -C -g -i -S -R -f'
LS_COLORS='ex=00;32:sg=30;33'
MORE='-lc'
PAGER=less
PERL_INLINE_DIRECTORY=~/.Inline/$(hostname -s)
PRINTER=$COLOR_PRINTER
RSYNC_RSH=ssh
SHELL=/usr/local/bin/bash
SSH_ASKPASS=/usr/bin/ksshaskpass
#SSLKEYLOGFILE=~/.sslkeyfile
SPARK_HOME=/usr/local/spark

CVSEDITOR=$EDITOR
FCEDIT=$EDITOR

# windows desktop X server
XWD=w10:0

# local screen shortcuts
LD0=':0.0'
LD1=':0.1'

## abbreviations (cdable_vars is ON)
bb=~/.bash_builtins
bf=~/.bash_functions
e=~/.emacs.d
h=/home/mtk
in=/usr/include
ins=/usr/include/sys
md=/smb/w10/C/Users/mtk/Desktop
n=/dev/null
xh=/net/x1/home/mtk
nh=/net/new/home/mtk
rh=/net/rekin/home/mtk

# local hacking
l=/usr/local
lb=$l/bin
ld=$l/doc
le=$l/etc
li=$l/include
lin=$l/info
ll=$l/lib
lm=$l/man
lr=$l/rfa
ls=$l/src
lt=$l/tar

# dependent

## arch-dependent
case $ARCH in
sun*)
;;
i*86)
;;
esac

set +a

# unsets
unset MAIL MAILCHECK

# Local Variables:
# mode: sh
# End:

